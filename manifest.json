{
    "manifest_version": 3,
    "name": "Kithara - Αποθήκευση τραγουδιών",
    "version": "1.0.3",
    "description": "Αποθηκεύστε τα αγαπημένα σας τραγούδια, μεμονομένα, από το kithara.to σε αρχεία κειμένου.",
    "homepage_url": "https://giannisftaras.dev/",
    "permissions": [
        "contextMenus", "tabs", "activeTab", "storage", "downloads", "scripting"
    ],
    "host_permissions": [
        "https://kithara.to/"
    ],
    "action": {
        "default_icon": "/images/icon-128.png",
        "default_popup": "main-view.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "background": {
        "service_worker": "/js/background.js"
    },
    "icons": {
        "16": "/images/icon-16.png",
        "32": "/images/icon-32.png",
        "48": "/images/icon-48.png",
        "128":"/images/icon-128.png"
    }
}