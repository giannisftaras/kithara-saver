{
    "manifest_version": 2,
    "name": "Kithara.to - Αποθήκευση τραγουδιών",
    "version": "1.0",
    "description": "Αποθηκεύστε τα αγαπημένα σας τραγούδια, μεμονομένα, από το kithara.to σε αρχεία κειμένου.",
    "homepage_url": "https://giannisftaras.dev/",
    "permissions": [
        "contextMenus", "tabs", "activeTab", "declarativeContent", "storage", "downloads"
    ],
    "browser_action": {
        "default_icon": "/images/icon-128.png",
        "default_popup": "main-view.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "background": {
        "scripts": ["/js/background.js"]
    },
    "icons": {
        "16": "/images/icon-16.png",
        "32": "/images/icon-32.png",
        "48": "/images/icon-48.png",
        "128":"/images/icon-128.png"
    }
}